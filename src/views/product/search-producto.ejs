<%- include("../partials/head.ejs")%>
	<link rel="stylesheet" href="/css/styles-editar-productos.css">
</head>
<body>
<%- include("../partials/header.ejs")%>
     <!--  //-----------------------// -->
     <h2 style="text-align:center;">Buscar</h2>
     <form action="/productDetail/search-producto" method="GET">
       <input type="text" name="search">
       <input type="submit" value="search">
     </form>
     <h1>LISTA DE PRODUCTOS</h1>
     <ul>
       <% for (let i = 0; i < productoResults.length; i++) { %>
       <article class="articulo-producto">
         <p class="titulo"><a href="/productDetail/productInfo/<%= productoResults[i].id %>"><%= productoResults[i].name %></a></p>
         <p class="titulo">Descripci√≥n: <%= productoResults[i].description %></p>
         <p class="precio">Precio: <%= productoResults[i].price %><br></p>
         <p class="producto"><img src="/images/<%= productoResults[i].imagen %>"></p>
       </article>
       <% } %>
     </ul>
     <%- include("../partials/footer.ejs")%>

     <img src="" alt="">
</html>

