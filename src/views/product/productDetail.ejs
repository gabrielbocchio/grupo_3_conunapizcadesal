              <p><%= producto.description %></p>
              <a href="#cerrar" class="close-link"><i class="fa-solid fa-xmark"></i></a>
            </div>
          </div>
        </article>
      <% }) %>
    <% } else { %>
      <p>No se encontraron productos</p>
    <% } %>
