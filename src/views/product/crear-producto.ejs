<%- include("../partials/head.ejs")%>
	<link rel="stylesheet" href="/css/styles-crear-productos.css">
	<script src="/js/validationsProduct.js"></script>
</head>
<body>
<%- include("../partials/header.ejs")%>
 	<h1>Crear Producto</h1>
	<form id="formulario" method="POST" action="/productDetail" enctype="multipart/form-data">
		<label for="name">Nombre:</label>
		<input id="name" type="text" name="name">
		<div id="nameError" class="text-danger"></div>

		<label for="categoria">Categoria:</label>
		<br>
		<select name="category" >
			<% for (let i =0; i< category.length; i ++) { %>
				<option value="<%= category[i].id%>">
					<%=category[i].name%>
				</option>
		<% } %>
 	</select>
		<br>
		<label for="description">Descripci√≥n:</label>
		<textarea  id= "description" name="description"></textarea>
		<div id="descriptionError" class="text-danger"></div>
		
		<label for="price">Precio:</label>
		<input  id="price" type="number" name="price">
		<div id="priceError" class="text-danger"></div>
 		
 		<label for="imagen">Imagen:</label>
		<input id="imagen" type="file" name="imagen">
		<div id="imagenError" class="text-danger"></div>

		<input type="submit" class="button" value="Crear Producto">
	</form>
</body>
<%- include("../partials/footer.ejs")%>
</html>