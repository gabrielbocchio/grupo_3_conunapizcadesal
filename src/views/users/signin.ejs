<%- include("../partials/head.ejs")%>
    <link rel="stylesheet" href="../css/styles-login.css">
</head>
<body  class="main-body">
<%- include("../partials/header.ejs")%>
<main class="main-login">
    <div class="login-wrap">
        <form method="POST" action="/users/signin" enctype="multipart/form-data">
            <div class="login-html">
                
                <input id="tab-2" type="radio" class="sign-up" checked><label for="tab-2" class="tab">REGISTRARSE</label>
                <div class="login-form">
                    <div class="sign-up-htm">
                        <div class="group">
                            <label for="firstname" class="label">Nombre:</label>
                            <input 
                                id="firstname" 
                                type="text" 
                                class="<%= locals.errors && errors.firstname ? 'is-invalid' : "input" %>" 
                                name="firstname"
                                value="<%= locals.oldData ? oldData.firstname : null %>"
                                >
                            <% if (locals.errors && errors.firstname) { %>
                                <div class="text-danger">
                                    <%= errors.firstname.msg %> 
                                </div>
                            <% } %>
                        </div>
                        <!-- ---- apellido -->
                            <div class="group">
                                <label for="lastname" class="label">Apellido:</label>
                                <input 
                                    id="lastname" 
                                    type="text" 
                                    class="<%= locals.errors && errors.lastname ? 'is-invalid' : "input" %>" 
                                    name="lastname"
                                    value="<%= locals.oldData ? oldData.lastname : null %>"
                                    >
                                <% if (locals.errors && errors.lastname) { %>
                                    <div class="text-danger">
                                        <%= errors.lastname.msg %> 
                                    </div>
                                <% } %>
                            </div>
                            <!-- ---- -->
                        <div class="group">
                            <div class="group">
                            <label for="pass" class="label">Email</label>
                            <input 
                                id="pass" 
                                type="text" 
                                class="<%= locals.errors && errors.email ? 'is-invalid' : "input" %>"  
                                name="email"
                                value="<%= locals.oldData ? oldData.email : null %>">
                            <% if (locals.errors && errors.email) { %>
                                <div class="text-danger">
                                    <%= errors.email.msg %>
                                </div>
                            <% } %>
                        </div>
                        <div class="group">
                            <label for="pass" class="label">Contraseña</label>
                            <input 
                                id="pass" 
                                type="password" 
                                class="<%= locals.password && errors.password ? 'is-invalid' : "input" %>" 
                                name="password">
                            <% if (locals.errors && errors.password) { %>
                                <div class="text-danger">
                                    <%= errors.password.msg %>
                                </div>
                            <% } %>
                        </div>
                        <div class="group">
                            <label for="pass" class="label">Repeti la contraseña</label>
                            <input 
                                id="pass" 
                                type="password" 
                                class="<%= locals.errors && errors.repeatpassword ? 'is-invalid' : "input" %>"  
                                name="repeatpassword">
                            <% if (locals.errors && errors.repeatpassword) { %>
                                <div class="text-danger">
                                    <%= errors.repeatpassword.msg %>
                                </div>
                            <% } %>
                        </div>
                        <div class="group">
                            <label for="avatars" class="label">Imagen de perfil</label>
                            <input 
                                id="avatars" 
                                type="file" 
                                class="<%= locals.errors && errors.avatars ? 'is-invalid' : "input" %>" 
                                name="avatars">
                            <% if (locals.errors && errors.avatars) { %>
                                <div class="text-danger">
                                    <%= errors.avatars.msg %>
                                </div>
                            <% } %>
                            </div>
                            <input type="submit" class="button" value="Registrate">
                        </div>
                        <div class="hr"></div>
                        <div class="foot-lnk">
                            <a href="/users/login" id="tab-1">Ya tenés tu cuenta?</a>
                        </div>
                        
                    </div>
                </div>
            </div>
        </form>
    </div>
</main>
<%- include("../partials/footer.ejs")%>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
