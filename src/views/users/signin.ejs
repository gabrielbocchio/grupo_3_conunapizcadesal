<%- include("../partials/head.ejs")%>
<link rel="stylesheet" href="../css/styles-login.css">
<script src="/js/validationsUser.js"></script>
</head>
<body  class="main-body">
<%- include("../partials/header.ejs")%>
<main class="main-login">
    <div class="login-wrap">
        <form id="formulario" class="form" method="POST" action="/users/signin" enctype="multipart/form-data">
            <div class="login-html">
                
                <input id="tab-2" type="radio" class="sign-up" checked><label for="tab-2" class="tab">REGISTRARSE</label>

                <!-- <ul class="errores"></ul> -->
                
                <div class="login-form">
                    <div class="sign-up-htm">
                        
                        <div class="group">
                            <label for="firstname" class="label">Nombre:</label>
                            <input 
                                id="firstname" 
                                type="text" 
                                class="input" 
                                name="firstname"
                                value="<%= locals.oldData ? oldData.firstname : null %>">
                                <div id="firstnameError" class="text-danger"></div>
                            </div>
                        <!-- ---- apellido -->
                        <div class="group">
                                <label for="lastname" class="label">Apellido:</label>
                                <input 
                                    id="lastname" 
                                    type="text" 
                                    class="input" 
                                    name="lastname"
                                    value="<%= locals.oldData ? oldData.lastname: null %>" >
                                    <div id="lastnameError" class="text-danger"></div>
                                </div>
                            <div class="group">
                                <label for="mail" class="label">Email</label>
                            <input 
                                id="mail" 
                                type="text" 
                                class="<%= locals.errors && errors.email ? 'is-invalid' : "input" %>"  
                                name="email"
                                value="<%= locals.oldData ? oldData.email : null %>">
                                <div id="emailError" class="text-danger"></div>
                                
                                <% if (locals.errors && errors.email) { %>
                                    <div class="text-danger">
                                        <%= errors.email.msg %>
                                        <% }%>
                                        
                        </div>
                        <div class="group">
                            <label for="pass" class="label">Contraseña</label>
                            <input 
                                id="pass" 
                                type="password" 
                                class="input" 
                                name="password">
                                <div id="passError" class="text-danger"></div>
                                <div class="group">
                                    <label for="pass2" class="label">Repeti la contraseña</label>
                            <input 
                                id="pass2" 
                                type="password" 
                                class="input"
                                name="repeatpassword">
                                <div id="pass2Error" class="text-danger"></div>
                            </div>
                        <div class="group">
                            <label for="avatars" class="label">Imagen de perfil</label>
                            <input 
                                id="avatars" 
                                type="file" 
                                class="input" 
                                name="avatars">
                                <div id="avatarsError" class="text-danger"></div>
                            </div>
                            <input type="submit" class="button" value="Registrate">
                        </div>
                        <div class="hr"></div>
                        <div class="foot-lnk">
                            <a href="/users/login" id="tab-1">Ya tenés tu cuenta?</a>
                        </div>
                        
                    </div>
                </div>
            </div>
        </form>
    </div>
</main>
<%- include("../partials/footer.ejs")%>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
